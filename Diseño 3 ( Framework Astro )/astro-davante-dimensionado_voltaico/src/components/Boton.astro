---
import '../styles/Boton.css';
---
<div class="modo-switch-container">
  <button id="modo-switch" class="modo-switch" aria-label="Cambiar modo" onclick="toggleModo()">
    <span class="icon sol" id="icon-sol">&#9728;</span>
    <span class="icon luna" id="icon-luna">&#9790;</span>
    <span class="switch-slider" id="switch-slider"></span>
  </button>
</div>

<script is:inline>
function toggleModo() {
  document.body.classList.toggle('modo-oscuro');

  // Cambia el logo del header
  const logoHeader = document.getElementById('logo-header');
  if (logoHeader) {
    logoHeader.src = document.body.classList.contains('modo-oscuro')
      ? '../../public/assets/Davante_logo_fundacion_vert_navy.png'
      : '../../public/assets/Davante_logo_fundacion_vert_white.png';
  }

  // Cambia el logo del footer
  const logoFooter = document.getElementById('logo-footer');
  if (logoFooter) {
    logoFooter.src = document.body.classList.contains('modo-oscuro')
      ? 'assets/Davante_logo_fundacion_vert_navy.png'
      : 'assets/Davante_logo_fundacion_vert_white.png';
  }
}
</script>