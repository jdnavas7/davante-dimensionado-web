    <!-- Sección Términos de Uso -->
    <section id="terminos" class="terms-section">
        <div class="container">
            <h2 class="section-title">Términos de Uso</h2>
            <p class="section-description">Condiciones legales para el uso de nuestra aplicación y servicios</p>
        
