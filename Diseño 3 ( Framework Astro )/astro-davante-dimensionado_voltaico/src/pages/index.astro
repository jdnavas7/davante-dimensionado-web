/* =========================
   VARIABLES Y RESET
   ========================= */
:root {
    --primary-blue: rgb(0, 53, 148);
    --light-gray: rgb(237, 237, 237);
    --white: #ffffff;
    --dark-blue: rgb(0, 32, 89);
    --light-blue: rgb(51, 102, 187);
    --text-dark: #333333;
    --text-light: #666666;
    --shadow: 0 4px 10px rgba(0, 53, 148, 0.1);
    --transition: all 0.3s ease;
}

* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: 'Poppins', sans-serif;
}

html {
    scroll-behavior: smooth;
    scroll-padding-top: 80px;
}

body {
    background-color: var(--white);
    color: var(--text-dark);
    line-height: 1.6;
    overflow-x: hidden;
}

.container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
}

/* =========================
   ELEMENTOS COMUNES
   ========================= */
a {
    text-decoration: none;
    color: inherit;
    transition: var(--transition);
}

ul {
    list-style: none;
}

img {
    max-width: 100%;
    height: auto;
}

/* =========================
   HERO SECTION 
   ========================= */
.hero-section {
    padding: 100px 0 60px 0;
    background: var(--white);
    text-align: center;
}

.hero-text h1 {
    font-size: 3rem;
    color: var(--primary-blue);
    margin-bottom: 18px;
    font-weight: 800;
    letter-spacing: -1px;
}

.hero-text p {
    font-size: 1.5rem;
    color: var(--text-light);
    margin-bottom: 36px;
    font-weight: 500;
}

.hero-app-download {
    margin-bottom: 30px;
}

.hero-store-buttons {
    display: flex;
    justify-content: center;
    gap: 24px;
    margin-bottom: 18px;
}

.hero-store-btn {
    display: flex;
    align-items: center;
    gap: 10px;
    background: var(--white);
    color: var(--primary-blue);
    border: 2px solid var(--primary-blue);
    border-radius: 10px;
    padding: 12px 22px;
    font-size: 1.1rem;
    font-weight: 600;
    transition: background 0.2s, color 0.2s, border 0.2s, transform 0.2s;
    box-shadow: 0 2px 8px rgba(0,53,148,0.08);
}

.hero-store-btn:hover {
    background: var(--primary-blue);
    color: var(--white);
    transform: translateY(-2px) scale(1.04);
}

.hero-store-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 36px;
    height: 36px;
}

.apple-icon { color: #000; }
.google-icon { color: #4285F4; }

.hero-direct-download {
    margin-top: 10px;
}

.hero-direct-download-btn {
    display: inline-block;
    background: var(--light-blue);
    color: var(--white);
    border-radius: 8px;
    padding: 12px 28px;
    font-size: 1.1rem;
    font-weight: 600;
    margin-top: 8px;
    transition: background 0.2s, transform 0.2s;
    box-shadow: 0 2px 8px rgba(0,53,148,0.08);
}

.hero-direct-download-btn:hover {
    background: var(--primary-blue);
    transform: translateY(-2px) scale(1.04);
}

/* =========================
   INFORMATION SECTION
   ========================= */
.information {
