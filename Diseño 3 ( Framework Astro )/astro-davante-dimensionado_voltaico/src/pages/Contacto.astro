<style>
    /* 
   Hoja de estilos - Header responsive sin JavaScript
   Colores principales:
   - Azul: rgb(0, 53, 148)
   - Gris claro: rgb(237, 237, 237)
*/

/* =========================
   VARIABLES Y RESET
   ========================= */
:root {
    --primary-blue: rgb(0, 53, 148);
    --light-gray: rgb(237, 237, 237);
    --white: #ffffff;
    --dark-blue: rgb(0, 32, 89);
    --light-blue: rgb(51, 102, 187);
    --text-dark: #333333;
    --text-light: #666666;
    --shadow: 0 4px 10px rgba(0, 53, 148, 0.1);
    --transition: all 0.3s ease;
}

* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: 'Poppins', sans-serif;
}

html {
    scroll-behavior: smooth;
    scroll-padding-top: 80px;
}

body {
    background-color: var(--white);
    color: var(--text-dark);
    line-height: 1.6;
    overflow-x: hidden;
}

.container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
}

/* =========================
   ELEMENTOS COMUNES
   ========================= */
a {
    text-decoration: none;
    color: inherit;
    transition: var(--transition);
}

ul {
    list-style: none;
}

img {
    max-width: 100%;
    height: auto;
}


    /* =========================
   SECCI√ìN CONTACTO
   ========================= */
.contact-section {
    padding: 100px 0;
    background-color: var(--white);
}

.contact-header {
    text-align: center;
    margin-bottom: 48px;
}

.section-title {
    text-align: center;
    font-size: 32px;
    color: var(--primary-blue);
    margin-bottom: 15px;
}

.section-description {
    text-align: center;
    font-size: 18px;
    color: var(--text-light);
    max-width: 800px;
    margin: 0 auto 50px;
}

.contact-flex {
    display: flex;
    gap: 40px;
    align-items: flex-start;
}

.contact-cards {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 24px;
    flex: 1;
}

.contact-card {
    background: var(--light-gray);
    border-radius: 12px;
    box-shadow: var(--shadow);
    padding: 32px 18px 22px 18px;
    text-align: center;
    border: 2px solid var(--primary-blue);
    transition: box-shadow 0.3s, transform 0.3s, border 0.3s;
}

.contact-card:hover {
    box-shadow: 0 8px 32px rgba(0,53,148,0.13);
    border: 2px solid var(--dark-blue);
    transform: translateY(-4px) scale(1.03);
}

.contact-icon {
    background: var(--primary-blue);
    color: var(--white);
    width: 48px;
    height: 48px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 2rem;
    margin: 0 auto 16px auto;
    box-shadow: 0 2px 8px rgba(0,53,148,0.10);
}

.contact-card h3 {
    color: var(--primary-blue);
    font-size: 1.1rem;
    margin-bottom: 8px;
    font-weight: 600;
}

.contact-card p,
.contact-card a {
    color: var(--text-dark);
    font-size: 1rem;
    margin: 0;
    word-break: break-word;
}

.contact-card a {
    color: var(--primary-blue);
    font-weight: 500;
    text-decoration: none;
    transition: color 0.2s;
}

.contact-card a:hover {
    text-decoration: underline;
    color: var(--dark-blue);
}

.contact-form-container {
    background: var(--light-gray);
    border-radius: 12px;
    box-shadow: var(--shadow);
    padding: 40px 32px 32px 32px;
    flex: 1.2;
    min-width: 320px;
}

.contact-form-container h3 {
    color: var(--primary-blue);
    font-size: 1.5rem;
    margin-bottom: 24px;
    text-align: center;
    font-weight: 600;
}

.contact-form .form-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 18px;
    margin-bottom: 18px;
}

.contact-form .form-group {
    margin-bottom: 18px;
}

.contact-form label {
    display: block;
    margin-bottom: 7px;
    font-weight: 500;
    color: var(--primary-blue);
}

.contact-form input,
.contact-form textarea {
    width: 100%;
    padding: 12px 15px;
    border: 1.5px solid #d3d3d3;
    border-radius: 7px;
    font-size: 1rem;
    transition: border 0.2s, box-shadow 0.2s;
    background: var(--white);
    color: var(--text-dark);
    resize: none;
}

.contact-form input:focus,
.contact-form textarea:focus {
    border-color: var(--primary-blue);
    outline: none;
    box-shadow: 0 0 0 2px rgba(0,53,148,0.10);
}

.submit-btn {
    width: 100%;
    padding: 14px 0;
    background: var(--primary-blue);
    color: var(--white);
    border: none;
    border-radius: 7px;
    font-size: 1.1rem;
    font-weight: 600;
    cursor: pointer;
    margin-top: 10px;
    transition: background 0.2s, box-shadow 0.2s;
    box-shadow: 0 2px 8px rgba(0,53,148,0.10);
}

.submit-btn:hover {
    background: var(--dark-blue);
    box-shadow: 0 4px 16px rgba(0,53,148,0.13);
}

/* =========================
   MODO OSCURO CONTACTO
   ========================= */
body.modo-oscuro {
    background: var(--primary-blue);
    color: var(--white);
}

body.modo-oscuro .contact-section {
    background: var(--primary-blue);
}

body.modo-oscuro .contact-header .section-title,
body.modo-oscuro .contact-header .section-description {
    color: var(--white);
}

body.modo-oscuro .contact-card,
body.modo-oscuro .contact-form-container {
    background: var(--primary-blue);
    border: 2px solid var(--white);
    box-shadow: 0 2px 12px rgba(255,255,255,0.07);
}

body.modo-oscuro .contact-card h3,
body.modo-oscuro .contact-card p,
body.modo-oscuro .contact-card a,
body.modo-oscuro .contact-form-container h3,
body.modo-oscuro .contact-form label,
body.modo-oscuro .contact-form input,
body.modo-oscuro .contact-form textarea {
    color: var(--white);
}

body.modo-oscuro .contact-card a {
    color: var(--white);
}

body.modo-oscuro .contact-card a:hover {
    color: var(--light-blue);
}

body.modo-oscuro .contact-icon {
    background: var(--white);
    color: var(--primary-blue);
}

body.modo-oscuro .contact-form input,
body.modo-oscuro .contact-form textarea {
    background: var(--primary-blue);
    border: 1.5px solid var(--white);
    color: var(--white);
}

body.modo-oscuro .contact-form input:focus,
body.modo-oscuro .contact-form textarea:focus {
    border-color: var(--light-blue);
    box-shadow: 0 0 0 2px rgba(255,255,255,0.10);
}

body.modo-oscuro .submit-btn {
    background: var(--white);
    color: var(--primary-blue);
}

body.modo-oscuro .submit-btn:hover {
    background: var(--light-blue);
    color: var(--white);
}

/* =========================
   RESPONSIVE STYLES
   ========================= */
@media screen and (max-width: 1200px) {
    .container {
        max-width: 1000px;
    }
}

@media screen and (max-width: 1024px) {
    .contact-flex {
        flex-direction: column;
        gap: 32px;
        align-items: stretch;
    }
    .contact-form-container,
    .contact-cards {
        width: 100%;
        min-width: 0;
        max-width: 100%;
    }
    .contact-cards {
        grid-template-columns: 1fr 1fr;
        gap: 18px;
        margin-top: 0;
    }
}

@media screen and (max-width: 768px) {
    .contact-section {
        padding: 80px 0;
    }
    .contact-header {
        margin-bottom: 32px;
    }
    .contact-flex {
        gap: 20px;
    }
    .contact-cards {
        grid-template-columns: 1fr;
        gap: 16px;
    }
    .contact-form-container {
        padding: 24px 8px 18px 8px;
    }
}

@media screen and (max-width: 480px) {
    .contact-section {
        padding: 60px 0 30px 0;
    }
    .contact-header {
        margin-bottom: 24px;
    }
    .contact-form-container {
        padding: 12px 2px 8px 2px;
    }
    .contact-card {
        padding: 18px 6px 14px 6px;
    }
}
</style>